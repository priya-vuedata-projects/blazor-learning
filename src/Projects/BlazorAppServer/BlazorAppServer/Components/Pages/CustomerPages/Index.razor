@page "/customers"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorAppServer.Models
@using BlazorAppServer.Data
@implements IAsyncDisposable
@inject IDbContextFactory<BlazorAppServer.Data.ApplicationDbContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Customers Index</h1>

<p>
    <a class="btn btn-primary" href="customers/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Customers">
    <PropertyColumn Property="customer => customer.Name" />
    <PropertyColumn Property="customer => customer.Email" />
    <PropertyColumn Property="customer => customer.Phone" />
    <PropertyColumn Property="customer => customer.Address" />
    <PropertyColumn Property="customer => customer.JoinedDate" />

    <TemplateColumn Context="customer">
        <a class="btn btn-sm btn-primary" href="@($" customers /edit?id ={customer.Id}")">Edit</a> |
        <a class="btn btn-outline-info" href="@($"customers/details?id={customer.Id}")">Details</a> |
        <a class="btn btn-sm btn-danger" href="@($"customers/delete?id={customer.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
